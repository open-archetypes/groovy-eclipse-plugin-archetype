#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="${parentArtifactId} Sample Action Set"
            visible="true"
            id="${parentArtifactId}.core.actionSet">
         <menu
               label="${parentArtifactId} Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;${parentArtifactId} Sample Action"
               icon="icons/sample.gif"
               class="${package}.core.SampleAction"
               tooltip="Hello, Groovy Eclipse. ${parentArtifactId} is built with Tycho"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="${package}.core.SampleAction">
         </action>
      </actionSet>
   </extension>

</plugin>
